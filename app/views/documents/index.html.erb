<div class="container my-4">
  <!-- Header -->
  <div class="text-center">
    <h1 class="display-4">List of All Documents</h1>
  </div>
</div>

<hr class="my-4">

<div class="container">
  <!-- Add Document Section -->
  <div class="mb-4">
    <h2 class="h4">Add a New Document</h2>

    <form action="/insert_document" method="post" class="needs-validation" novalidate>
      <div class="form-group">
        <label for="title_box" class="form-label">Name of Document</label>
        <input type="text" id="title_box" name="query_title" class="form-control" placeholder="Enter document name" required>
      </div>

      <button type="submit" class="btn btn-primary mt-2">Create New Document</button>
    </form>
  </div>
</div>

<hr class="my-4">

<div class="container">
  <!-- Documents Table -->
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Created At</th>
          <th>Updated At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @list_of_documents.each do |a_document| %>
        <tr>
          <td><%= a_document.id %></td>
          <td><%= a_document.title %></td>
          <td><%= time_ago_in_words(a_document.created_at) %> ago</td>
          <td><%= time_ago_in_words(a_document.updated_at) %> ago</td>
          <td>
            <a href="/documents/<%= a_document.id %>" class="btn btn-link">Show Details</a>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr class="my-4">
