<div class="container my-4">
  <!-- Page Header -->
  <div class="text-center">
    <h1 class="display-6">your second brain</h1>
  </div>
</div>

<hr class="my-4">

<div class="container">
  <!-- Form Section -->
  <div class="mb-4">
    <%= form_with(model: Note.new, url: "/notes", scope: nil, method: "post", class: "needs-validation", novalidate: true) do |form| %>
      <div class="form-group">
        <%= form.label(:body, "New Note", for: "query_body", class: "form-label") %>
        <%= form.rich_text_area(:body, id: "query_body", name: "query_body", class: "form-control") %>
      </div>

      <div class="form-group mt-3">
        <label for="document_id" class="form-label">Choose a Document</label>
        <select id="document_id" name="document_id" class="form-select">
          <option value="" disabled selected>Select your document</option>
          <!-- Dynamically populated options from the database -->
          <% Document.all.each do |document| %>
            <option value="<%= document.id %>"><%= document.title %></option>
          <% end %>
        </select>
      </div>

      <button type="submit" class="btn btn-primary mt-3">Create Post</button>
    <% end %>
  </div>
</div>

<hr class="my-4">

<div class="container">
  <p>
    See all documents or add a document <a href="/documents" class="link-primary">here</a>.
  </p>
</div>

<hr class="my-4">
